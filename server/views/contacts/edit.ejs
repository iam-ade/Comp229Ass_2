<%- include('../partials/header.ejs'); %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Contact Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Book Name" name="name" value="<%= contacts.name %>" required>
              </div>

              <div class="form-group">
                <label for="NumberTextField">Contact Number</label>
                <input type="text" class="form-control" id="NumberTextField"
                placeholder="Contact Number" name="number" value="<%= contacts.number %>"  required>
              </div>

              <div class="form-group">
                <label for="EmailTextField">Email</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Contact Email" name="email" value="<%= contacts.email %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/contacts" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<%- include('../partials/footer.ejs'); %>
